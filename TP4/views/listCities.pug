doctype html
html
    head
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js")
        script
            include ../js/script.js
            
    body
        div.container.mt-5
            h1 Liste des villes
            div.jumbotron
                table.table
                    thead
                        tr
                            th Nom
                            th Modifier
                            th Supprimer
                    tbody
                        each city in list
                            - var id = city._id
                            - var name = city.name
                            tr
                                td 
                                    input(id="city"+id type='text' name='name' value=name class="form-control")
                                td
                                    button.btn.btn-warning.btn-block(onclick='PUT("' + id + '")') Modifier
                                td
                                    button.btn.btn-danger.btn-block(onclick='DELETE("' + id + '")') Supprimer
                a(class='btn btn-primary btn-block' href='/') Ajouter une ville
